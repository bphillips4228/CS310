<programname>Volume Calculator</programname>
<arguments>
    <positional>
        <name>length</name>
        <type>float</type>
        <position>1</position>
    </positional>
    <positional>
        <name>width</name>
        <type>float</type>
        <position>2</position>
    </positional>
    <positional>
        <name>height</name>
        <type>float</type>
        <position>3</position>
    </positional>
    <named>
		<name>type</name>
		<type>string</type>
		<shortname>t</shortname>
		<default>box</default>
		<restricted>box, sphere, cylinder</restricted>
	</named>
	<named>
		<name>digits</name>
		<type>int</type>
		<shortname>d</shortname>
		<default>2</default>
	</named>
</arguments>